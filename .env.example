# ========================================
# Django Environment Configuration
# ========================================
# Copy this file to .env and customize as needed:
#   Windows: copy .env.example .env
#   Mac/Linux: cp .env.example .env

# ========================================
# REQUIRED FOR DEVELOPMENT
# ========================================

# Debug mode (MUST SET TO 1 FOR DEVELOPMENT!)
# Without this, you'll get "DJANGO_SECRET_KEY required" error
DJANGO_DEBUG=1

# ========================================
# OPTIONAL SETTINGS
# ========================================

# Secret key for cryptographic signing
# Leave empty in development - will auto-generate with warning
# For production, generate one with:
#   python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=

# Allowed hosts (comma-separated)
# Default: localhost,127.0.0.1
# For production, set to your domain: example.com,www.example.com
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database filename
# Default: db.sqlite3
DJANGO_DB_NAME=db.sqlite3

# ========================================
# EMAIL ENCRYPTION (MCO 1 Feature)
# ========================================

# 32-byte AES-256 encryption key for email addresses (base64 encoded)
# Leave empty - will auto-derive from SECRET_KEY
#
# Only set this if:
# - You're sharing a database with other team members
# - You need consistent encryption across multiple machines
#
# To generate a secure key:
#   python -c "from accounts.encryption import generate_encryption_key; print(generate_encryption_key())"
#
# WARNING: If you set this, back it up! Lost key = emails cannot be decrypted
ACCOUNT_EMAIL_ENCRYPTION_KEY=

# ========================================
# PAYMONGO PAYMENT INTEGRATION
# ========================================

# Get your TEST API keys from: https://dashboard.paymongo.com/developers
# 1. Sign up for PayMongo account
# 2. Go to Developers > API Keys
# 3. Copy the TEST keys (not live!)
#
# Without these, payment features will not work

# Secret Key (starts with sk_test_)
PAYMONGO_SECRET_KEY=sk_test_your_key_here

# Public Key (starts with pk_test_)
PAYMONGO_PUBLIC_KEY=pk_test_your_key_here

# Webhook Secret (optional - for webhook signature verification)
# Get this when you create a webhook endpoint in PayMongo dashboard
PAYMONGO_WEBHOOK_SECRET=
